{% extends 'base.html.twig' %}

{% block title %}Modifier l'événement{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<style>
    .form-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    .btn-primary-custom {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
    }
    .btn-primary-custom:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }
    .btn-secondary-custom {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
    }
    .btn-secondary-custom:hover {
        background-color: #5a6268;
        border-color: #545b62;
    }
</style>
{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-4">Modifier l'événement</h1>

    <div class="form-container">
        {{ form_start(form) }}
        
        <div class="form-group">
            {{ form_label(form.title, 'Titre') }}
            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.title) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.type, 'Type d\'événement') }}
            {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.type) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.description, 'Description') }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.description) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.location, 'Lieu') }}
            {{ form_widget(form.location, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.location) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.startDate, 'Date de début') }}
            {{ form_widget(form.startDate, {'attr': {'class': 'form-control', 'placeholder': 'jj/mm/aaaa'}}) }}
            {{ form_errors(form.startDate) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.endDate, 'Date de fin') }}
            {{ form_widget(form.endDate, {'attr': {'class': 'form-control', 'placeholder': 'jj/mm/aaaa'}}) }}
            {{ form_errors(form.endDate) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.photo, 'Photo de l\'événement') }}
            {{ form_widget(form.photo, {'attr': {'class': 'form-control-file'}}) }}
            {{ form_errors(form.photo) }}
        </div>
        
        <button type="submit" class="btn btn-primary-custom">Mettre à jour</button>
        <a href="{{ path('app_event_crud_index') }}" class="btn btn-secondary-custom">Retour à la liste</a>

        {{ form_end(form) }}

        <form method="post" action="{{ path('app_event_crud_delete', {'id': event.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="mt-3">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
            <button class="btn btn-danger">Supprimer</button>
        </form>
    </div>
</div>
{% endblock %}