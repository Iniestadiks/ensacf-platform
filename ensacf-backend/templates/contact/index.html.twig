{# templates/contact/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Contact - ENSACF{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .contact-container {
            padding: 50px 20px;
            text-align: center;
        }
        .contact-container h1 {
            font-size: 3em;
            margin-bottom: 20px;
        }
        .contact-grid {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
        }
        .contact-card {
            background-color: #f8f9fa;
            border: 1px solid #e9ecef;
            border-radius: 10px;
            padding: 20px;
            width: 300px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: left;
        }
        .contact-card h2 {
            font-size: 1.5em;
            margin-top: 0;
        }
        .contact-card p {
            margin: 10px 0;
            line-height: 1.4;
        }
        .contact-card a {
            color: #007bff;
            text-decoration: none;
        }
        .contact-card a:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}

{% block body %}
