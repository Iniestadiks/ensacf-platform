{% extends 'base.html.twig' %}

{% block title %}Disponibilité des salles d'exposition{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }
    h1 {
        text-align: center;
        margin-bottom: 30px;
        font-size: 2.5em;
    }
    form {
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .form-group {
        margin-bottom: 20px;
    }
    label {
        font-weight: bold;
    }
    .form-control {
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
        width: 100%;
    }
    .btn {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        font-size: 1.1em;
    }
    .alert {
        text-align: center;
        font-size: 1.1em;
    }
    table {
        margin-top: 20px;
        width: 100%;
        border-collapse: collapse;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    th, td {
        padding: 15px;
        text-align: left;
    }
    th {
        background-color: #0053b3;
        color: white;
    }
    tr:nth-child(even) {
        background-color: #f2f2f2;
    }
    .text-center {
        text-align: center;
    }
</style>
{% endblock %}

{% block body %}
<div class="container">
    <h1>Disponibilité des salles d'exposition</h1>

    <form method="get" action="{{ path('teacher_check_availability') }}">
        <div class="form-group">
            <label for="startDate">Date de début</label>
            <input type="date" id="startDate" name="startDate" value="{{ startDate }}" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="endDate">Date de fin</label>
            <input type="date" id="endDate" name="endDate" value="{{ endDate }}" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary">Vérifier la disponibilité</button>
    </form>

    {% if startDate and endDate %}
        {% if isAvailable %}
            <div class="alert alert-success mt-4">
                La salle d'exposition est disponible pour les dates sélectionnées.
            </div>
        {% else %}
            <div class="alert alert-danger mt-4">
                La salle d'exposition n'est pas disponible pour les dates sélectionnées.
            </div>
        {% endif %}

        <h2 class="text-center">Événements existants entre le {{ startDate }} et le {{ endDate }}</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Titre</th>
                    <th>Type</th>
                    <th>Description</th>
                    <th>Lieu</th>
                    <th>Date de début</th>
                    <th>Date de fin</th>
                </tr>
            </thead>
            <tbody>
                {% for event in events %}
                    <tr>
                        <td>{{ event.id }}</td>
                        <td>{{ event.title }}</td>
                        <td>{{ event.type }}</td>
                        <td>{{ event.description }}</td>
                        <td>{{ event.location }}</td>
                        <td>{{ event.startDate ? event.startDate|date('d/m/Y H:i') : '' }}</td>
                        <td>{{ event.endDate ? event.endDate|date('d/m/Y H:i') : '' }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center">Aucun événement trouvé pour les dates sélectionnées.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
{% endblock %}