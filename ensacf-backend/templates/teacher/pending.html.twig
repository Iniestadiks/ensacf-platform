{% extends 'base.html.twig' %}

{% block title %}Événements en attente{% endblock %}

{% block body %}
<h1>Événements en attente</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Titre</th>
            <th>Type</th>
            <th>Description</th>
            <th>Lieu</th>
            <th>Date de début</th>
            <th>Date de fin</th>
        </tr>
    </thead>
    <tbody>
    {% for event in events %}
        <tr>
            <td>{{ event.id }}</td>
            <td>{{ event.title }}</td>
            <td>{{ event.type }}</td>
            <td>{{ event.description }}</td>
            <td>{{ event.location }}</td>
            <td>{{ event.startDate ? event.startDate|date('d/m/Y H:i') : '' }}</td>
            <td>{{ event.endDate ? event.endDate|date('d/m/Y H:i') : '' }}</td>
        </tr>
    {% else %}
        <tr>
            <td colspan="7" class="text-center">Aucun événement en attente</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a href="{{ path('teacher_dashboard') }}" class="btn btn-secondary">Retour au tableau de bord</a>
{% endblock %}