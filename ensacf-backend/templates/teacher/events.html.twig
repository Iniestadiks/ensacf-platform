{% extends 'base.html.twig' %}

{% block title %}Liste des événements approuvés{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-4">Liste des événements approuvés</h1>

    <div class="events">
        {% for event in events %}
        <div class="event">
            <h2>{{ event.title }} - {{ event.startDate|date('d/m/Y') }} ({{ event.type }})</h2>
            <p>{{ event.description }}</p>
            <p>Lieu: {{ event.location }}</p>
            <p>Du {{ event.startDate|date('d/m/Y H:i') }} au {{ event.endDate|date('d/m/Y H:i') }}</p>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}